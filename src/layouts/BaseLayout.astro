    </div>
  </footer>

  <!-- App redirect script -->
  <script define:vars={{ APP_URL }}>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('[data-app-redirect]').forEach(el => {
        el.addEventListener('click', (e) => {
          e.preventDefault();
          const url = el.getAttribute('data-app-redirect') || APP_URL;
          window.location.href = url;
        });
      });
    });
  </script>
</body>
</html>
